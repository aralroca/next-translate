{
  "name": "i18n-next-static",
  "version": "0.1.0",
  "description": "Next.js utility to translate pages without the need of a server (static i18n pages generator).",
  "license": "MIT",
  "keywords": [
    "react",
    "i18n",
    "nextjs",
    "next.js",
    "next",
    "translation",
    "localization",
    "locale",
    "static"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vinissimus/i18n-next-static.git"
  },
  "author": {
    "name": "Aral Roca GÃ²mez",
    "email": "aral-rg@hotmail.com"
  },
  "scripts": {
    "build": "yarn clean && NODE_ENV=production babel src -d dist",
    "clean": "rm -rf dist && rm -rf examples/static-site/.next && rm -rf examples/with-server/.next",
    "example:static-site": "yarn build && cd examples/static-site && yarn && yarn dev",
    "example:with-server": "yarn build && cd examples/with-server && yarn && yarn dev",
    "format": "pretty-quick",
    "prepublish": "yarn test && yarn build",
    "test": "NODE_ENV=test jest",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watch"
  },
  "main": "dist",
  "files": [
    "dist"
  ],
  "bin": {
    "i18nns": "./cli/builder.js"
  },
  "devDependencies": {
    "@babel/cli": "7.7.4",
    "@babel/core": "7.7.4",
    "@babel/preset-env": "7.7.4",
    "@testing-library/react": "9.3.2",
    "babel-jest": "24.9.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.2",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "next": "9.1.4",
    "prettier": "1.19.1",
    "pretty-quick": "2.0.1",
    "react": "16.12.0",
    "react-dom": "16.12.0"
  },
  "peerDependencies": {
    "next": ">= 7.0.0",
    "react": ">= 16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format && git add . && yarn test"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "roots": [
      "<rootDir>/__tests__"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  }
}
